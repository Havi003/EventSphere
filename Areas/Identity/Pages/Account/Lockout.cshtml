@page
@model LockoutModel
@{
    ViewData["Title"] = "Account Locked";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-danger">
                <div class="card-body p-4 text-center">
                    <i class="fa fa-lock fa-3x text-danger mb-3"></i>
                    <h3 class="text-danger mb-3">@ViewData["Title"]</h3>
                    <p class="text-danger">This account has been locked out due to multiple failed login attempts.</p>
                    <p class="text-muted">Please try again later or contact support if you need assistance.</p>
                    <hr class="my-4" />
                    <a asp-page="./Login" class="btn btn-primary">Return to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
