@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = "~/Areas/Identity/Pages/_EventsLayout.cshtml";
}

<link rel="stylesheet" href="~/css/site.css" />

<h2><strong>Welcome Back to the SPHERE of amazing EVENTS!</strong></h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div> <!-- Show validation errors -->

    <div class="mb-3">
        <label asp-for="Input.Username" class="form-label">Username</label>
        <input asp-for="Input.Username" class="form-control" />
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label">Password</label>
        <input asp-for="Input.Password" type="password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="w-100">LOGIN</button>

    <p class="mt-3">
        New Here? <br/>
        <a asp-area="Identity" asp-page="/Account/Register">Sign up</a>
    </p>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
