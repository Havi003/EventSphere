@page
@model Disable2faModel
@{
    ViewData["Title"] = "Disable Two-Factor Authentication";
    ViewData["ActivePage"] = "TwoFactorAuthentication";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <partial name="_StatusMessage" for="StatusMessage" />
                    <h3 class="mb-4 text-center">@ViewData["Title"]</h3>

                    <div class="alert alert-warning" role="alert">
    <p>
        <strong>This action only disables 2FA.</strong>
    </p>
    <p>
        Disabling 2FA does not change the keys used in authenticator apps. If you wish to change the key
        used in an authenticator app you should <a asp-page="./ResetAuthenticator">reset your authenticator keys.</a>
    </p>
</div>

                    <div class="text-center">
                        <form method="post">
                            <button class="btn btn-danger btn-lg" type="submit">Disable 2FA</button>
                            <a asp-page="./TwoFactorAuthentication" class="btn btn-secondary btn-lg">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
