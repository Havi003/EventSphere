@page
@model Eventsphere.Areas.Identity.Pages.Form_Events.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/FormEvent.css" />


<div class="pop-up-container">

    <h4>EVENT DETAILS</h4>

    <dl class="row">
        <dt class="col-sm-2">
            Event Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FormEvent.EventName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FormEvent.Location):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FormEvent.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FormEvent.Poster):
        </dt>
        <dd class="col-sm-10">
            <img src="data:image/jpg;base64, @Model.FormEvent.Poster" width="120px" height="120px" />
        </dd>
        <dt class="col-sm-2">
            Event Date:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FormEvent.EventDate)
        </dd>
        <dt class="col-sm-2">
            Event Starts At:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FormEvent.StartTime)
        </dd>
        <dt class="col-sm-2">
            Event Ends At:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FormEvent.EndTime)
        </dd>
        <dt class="col-sm-2">
            About the event:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FormEvent.About)
        </dd>
        <dt class="col-sm-2">
            Ticket categories:
        </dt>
        <dd class="col-sm-10">
            @if (Model.TicketDetails.Any())
            {
                <ul>
                    @foreach (var ticket in Model.TicketDetails)
                    {
                        <li><strong>@ticket.Category</strong> - Kshs. @ticket.Amount</li>
                    }
                </ul>
            }
            else
            {
                <p>No tickets available for this event.</p>
            }
        </dd>
    </dl>

    <div class="buttons-below">
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.FormEvent.Id">
                <button>EDIT EVENT DETAILS</button>
            </a>
        </div>
        <div>
            <a asp-area="Identity" asp-controller="Home" asp-action="Index">
                <button>GO BACK HOME</button>
            </a>
        </div>
    </div>
</div>